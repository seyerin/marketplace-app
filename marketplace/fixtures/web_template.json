  "template": "<nav class=\"navbar navbar-expand-lg website-header\" style=\"background-color: #E21B27; border-bottom: 1px solid #c2151f; padding: 10px 0;\">\r\n    <div class=\"container-fluid d-flex justify-content-between align-items-center\">\r\n\r\n        {# Left Section: Logo & Text #}\r\n        <div class=\"d-flex align-items-center\">\r\n            <a class=\"navbar-brand me-3\" href=\"{{ url_prefix }}{{ home_page or \"/\" }}\" style=\"color: white; font-weight: bold; font-size: 1.5rem;\">\r\n                {%- if brand_html -%}\r\n                    {{ brand_html }}\r\n                {%- elif banner_image -%}\r\n                    <img src='{{ banner_image }}' alt=\"Logo\" style=\"height: 35px;\">\r\n                {%- else -%}\r\n                    <span>{{ (frappe.get_hooks(\"brand_html\") or [_(\"Home\")])[0] }}</span>\r\n                {%- endif -%}\r\n            </a>\r\n            <span style=\"color: white; font-size: 1.5rem;\">{{ app_name or \"Products\" }}</span>\r\n        </div>\r\n\r\n        {# Center Section: Main Search Bar #}\r\n        <div class=\"mx-auto flex-grow-1 d-none d-lg-block\">\r\n            <form class=\"d-flex w-100\" action=\"/search\" method=\"GET\">\r\n                <input class=\"form-control\" type=\"search\" placeholder=\"Search...\" aria-label=\"Search\" name=\"q\" style=\"border-radius: 5px; border: none; background-color: rgba(255,255,255,0.2); color: white; padding: 8px 12px;\">\r\n            </form>\r\n        </div>\r\n\r\n        {# Right Section: Icons #}\r\n        <ul class=\"navbar-nav d-flex flex-row align-items-center ms-auto\">\r\n            <li class=\"nav-item d-none d-lg-block\">\r\n                <a class=\"nav-link\" href=\"/search\" style=\"color: white;\" title=\"Search\">\r\n                    <i class=\"fa fa-search\"></i>\r\n                </a>\r\n            </li>\r\n            <li class=\"nav-item\">\r\n                <a class=\"nav-link\" href=\"/my-account\" style=\"color: white;\" title=\"My Account\">\r\n                    <i class=\"fa fa-user\"></i>\r\n                </a>\r\n            </li>\r\n            <li class=\"nav-item\">\r\n                <a class=\"nav-link\" href=\"/cart\" style=\"color: white;\" title=\"Shopping Cart\">\r\n                    <i class=\"fa fa-shopping-cart\"></i>\r\n                    {% set total_items_in_cart = frappe.db.get_value(\"Shopping Cart\", frappe.session.user, \"total_unique_items\") %}\r\n                    {% if total_items_in_cart %}\r\n                        <span class=\"badge bg-light text-danger rounded-pill ms-1\">\r\n                            {{ total_items_in_cart }}\r\n                        </span>\r\n                    {% endif %}\r\n                </a>\r\n            </li>\r\n        </ul>\r\n\r\n        {# Toggler for mobile (Burger icon) #}\r\n        <button class=\"navbar-toggler\" type=\"button\"\r\n            data-toggle=\"collapse\"\r\n            data-target=\"#navbarSupportedContent\"\r\n            aria-controls=\"navbarSupportedContent\"\r\n            aria-expanded=\"false\"\r\n            aria-label=\"Toggle navigation\"\r\n            style=\"border-color: rgba(255,255,255,.1);\">\r\n            <span class=\"navbar-toggler-icon\"></span>\r\n        </button>\r\n\r\n    </div>\r\n</nav>\r\n\r\n<style>\r\n    /* Custom CSS for this specific navbar template */\r\n    .website-header {\r\n        box-shadow: 0 2px 4px rgba(0,0,0,.1);\r\n    }\r\n    .website-header .navbar-brand {\r\n        font-size: 1.8rem;\r\n    }\r\n    .website-header .form-control::placeholder {\r\n        color: rgba(255, 255, 255, 0.7);\r\n    }\r\n    .website-header .nav-link {\r\n        color: white !important;\r\n        font-weight: 500;\r\n        padding-left: 12px;\r\n        padding-right: 12px;\r\n    }\r\n    .website-header .nav-link:hover {\r\n        color: rgba(255, 255, 255, 0.8) !important;\r\n    }\r\n    .website-header .badge {\r\n        font-size: 0.75em